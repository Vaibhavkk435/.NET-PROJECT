@model IEnumerable<FoodDeliveryApp.Models.MenuItem>

@{
    ViewData["Title"] = "Menu Items";
}

<div class="container py-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="display-5 fw-bold">
                        <i class="fas fa-hamburger text-primary me-2"></i>Menu Items
                    </h1>
                    <p class="text-muted">Delicious dishes from our partner restaurants</p>
                </div>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Add Menu Item
                </a>
            </div>
        </div>
    </div>

    <!-- Search and Filter Section -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="search-container">
                <input type="text" class="search-input" placeholder="Search menu items..." id="menuSearch">
            </div>
        </div>
        <div class="col-md-3">
            <select class="form-select" id="priceFilter" style="height: 50px; border-radius: 25px;">
                <option value="">All Prices</option>
                <option value="0-100">Under ₹100</option>
                <option value="100-200">₹100 - ₹200</option>
                <option value="200-300">₹200 - ₹300</option>
                <option value="300+">Above ₹300</option>
            </select>
        </div>
        <div class="col-md-3">
            <select class="form-select" id="sortFilter" style="height: 50px; border-radius: 25px;">
                <option value="">Sort by...</option>
                <option value="name">Name (A-Z)</option>
                <option value="price-low">Price (Low to High)</option>
                <option value="price-high">Price (High to Low)</option>
            </select>
        </div>
    </div>

    <!-- Menu Items Grid -->
    <div class="row" id="menu-grid">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4 menu-item" data-name="@item.Name.ToLower()" data-price="@item.Price" data-restaurant="@item.Restaurant?.Name?.ToLower()">
                <div class="card menu-item-card h-100">
                    <div class="position-relative">
                        <img src="@(!string.IsNullOrEmpty(item.ImageUrl) ? item.ImageUrl : "https://images.unsplash.com/photo-1565299624946-b28f40a0ca4b?w=400&h=250&fit=crop")" 
                             class="card-img-top" alt="@item.Name" style="height: 200px; object-fit: cover;"
                             onerror="this.src='https://images.unsplash.com/photo-1565299624946-b28f40a0ca4b?w=400&h=250&fit=crop'">
                        <div class="price-badge">₹@item.Price</div>
                        <div class="position-absolute top-0 start-0 m-3">
                            <span class="badge bg-warning text-dark">
                                <i class="fas fa-fire me-1"></i>Popular
                            </span>
                        </div>
                    </div>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-bold">@item.Name</h5>
                        @if (!string.IsNullOrEmpty(item.Description))
                        {
                            <p class="card-text text-muted small">@item.Description</p>
                        }
                        @if (item.Restaurant != null)
                        {
                            <p class="card-text">
                                <small class="text-muted">
                                    <i class="fas fa-store me-1"></i>@item.Restaurant.Name
                                </small>
                            </p>
                        }
                        <div class="rating mb-3">
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <span class="ms-1 text-muted">5.0 (45+ reviews)</span>
                        </div>
                        <div class="mb-3">
                            <small class="text-muted">
                                <i class="fas fa-clock me-1"></i>15-20 min prep time
                            </small>
                        </div>
                        <div class="mt-auto">
                            <div class="row g-2">
                                <div class="col-8">
                                    <button class="btn btn-add-to-cart w-100" onclick="addToCart(@item.Id, '@item.Name', @item.Price, '@(!string.IsNullOrEmpty(item.ImageUrl) ? item.ImageUrl : "https://images.unsplash.com/photo-1565299624946-b28f40a0ca4b?w=150&h=150&fit=crop")')">
                                        <i class="fas fa-cart-plus me-1"></i>Add to Cart
                                    </button>
                                </div>
                                <div class="col-4">
                                    <div class="dropdown w-100">
                                        <button class="btn btn-outline-secondary dropdown-toggle w-100" type="button" data-bs-toggle="dropdown">
                                            <i class="fas fa-cog"></i>
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li><a class="dropdown-item" asp-action="Edit" asp-route-id="@item.Id">
                                                <i class="fas fa-edit me-2"></i>Edit
                                            </a></li>
                                            <li><a class="dropdown-item" asp-action="Details" asp-route-id="@item.Id">
                                                <i class="fas fa-info-circle me-2"></i>Details
                                            </a></li>
                                            <li><hr class="dropdown-divider"></li>
                                            <li><a class="dropdown-item text-danger" asp-action="Delete" asp-route-id="@item.Id">
                                                <i class="fas fa-trash me-2"></i>Delete
                                            </a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="fas fa-hamburger text-muted" style="font-size: 4rem;"></i>
            <h3 class="mt-3 text-muted">No menu items found</h3>
            <p class="text-muted">Start by adding some delicious items to the menu!</p>
            <a asp-action="Create" class="btn btn-primary btn-lg">
                <i class="fas fa-plus me-2"></i>Add First Menu Item
            </a>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Search functionality
        document.getElementById('menuSearch').addEventListener('keyup', function() {
            const searchTerm = this.value.toLowerCase();
            filterItems();
        });

        // Price filter
        document.getElementById('priceFilter').addEventListener('change', function() {
            filterItems();
        });

        // Sort functionality
        document.getElementById('sortFilter').addEventListener('change', function() {
            const sortBy = this.value;
            const grid = document.getElementById('menu-grid');
            const items = Array.from(document.querySelectorAll('.menu-item'));
            
            if (!sortBy) return;
            
            items.sort((a, b) => {
                if (sortBy === 'name') {
                    return a.dataset.name.localeCompare(b.dataset.name);
                } else if (sortBy === 'price-low') {
                    return parseFloat(a.dataset.price) - parseFloat(b.dataset.price);
                } else if (sortBy === 'price-high') {
                    return parseFloat(b.dataset.price) - parseFloat(a.dataset.price);
                }
                return 0;
            });
            
            items.forEach(item => {
                grid.appendChild(item);
            });
        });

        function filterItems() {
            const searchTerm = document.getElementById('menuSearch').value.toLowerCase();
            const priceRange = document.getElementById('priceFilter').value;
            const items = document.querySelectorAll('.menu-item');
            
            items.forEach(item => {
                const name = item.dataset.name;
                const restaurant = item.dataset.restaurant;
                const price = parseFloat(item.dataset.price);
                
                let showItem = true;
                
                // Search filter
                if (searchTerm && !name.includes(searchTerm) && !restaurant.includes(searchTerm)) {
                    showItem = false;
                }
                
                // Price filter
                if (priceRange) {
                    if (priceRange === '0-100' && price >= 100) showItem = false;
                    if (priceRange === '100-200' && (price < 100 || price >= 200)) showItem = false;
                    if (priceRange === '200-300' && (price < 200 || price >= 300)) showItem = false;
                    if (priceRange === '300+' && price < 300) showItem = false;
                }
                
                item.style.display = showItem ? 'block' : 'none';
            });
        }
    </script>
}
