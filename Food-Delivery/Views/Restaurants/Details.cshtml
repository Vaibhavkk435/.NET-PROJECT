@model FoodDeliveryApp.Models.Restaurant

@{
    ViewData["Title"] = Model?.Name ?? "Restaurant Details";
}

<!-- Restaurant Header Section -->
<div class="restaurant-hero mb-4" style="margin-top: -80px; padding-top: 80px;">
    <div class="position-relative">
        <img src="@(!string.IsNullOrEmpty(Model?.ImageUrl) ? Model.ImageUrl : "https://images.unsplash.com/photo-1517248135467-4c7edcad34c4?w=1200&h=400&fit=crop")" 
             class="img-fluid w-100" alt="@Model?.Name" style="height: 400px; object-fit: cover; border-radius: 15px;"
             onerror="this.src='https://images.unsplash.com/photo-1517248135467-4c7edcad34c4?w=1200&h=400&fit=crop'">
        <div class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-end" 
             style="background: linear-gradient(transparent, rgba(0,0,0,0.7)); border-radius: 15px;">
            <div class="container pb-4">
                <div class="row">
                    <div class="col-12">
                        <h1 class="display-4 text-white fw-bold mb-2">@Model?.Name</h1>
                        <p class="text-white-50 fs-5 mb-0">
                            <i class="fas fa-map-marker-alt me-2"></i>@Model?.Address
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <!-- Restaurant Information Card -->
        <div class="col-lg-8 mb-4">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>Restaurant Information
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="info-item">
                                <h6 class="text-muted mb-1">
                                    <i class="fas fa-store me-2"></i>Restaurant Name
                                </h6>
                                <p class="h5 mb-0">@Model?.Name</p>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="info-item">
                                <h6 class="text-muted mb-1">
                                    <i class="fas fa-map-marker-alt me-2"></i>Address
                                </h6>
                                <p class="mb-0">@Model?.Address</p>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="info-item">
                                <h6 class="text-muted mb-1">
                                    <i class="fas fa-star me-2"></i>Rating
                                </h6>
                                <div class="rating">
                                    <i class="fas fa-star text-warning"></i>
                                    <i class="fas fa-star text-warning"></i>
                                    <i class="fas fa-star text-warning"></i>
                                    <i class="fas fa-star text-warning"></i>
                                    <i class="fas fa-star-half-alt text-warning"></i>
                                    <span class="ms-2">4.5 (120+ reviews)</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="info-item">
                                <h6 class="text-muted mb-1">
                                    <i class="fas fa-clock me-2"></i>Delivery Time
                                </h6>
                                <p class="mb-0">30-45 minutes</p>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="info-item">
                                <h6 class="text-muted mb-1">
                                    <i class="fas fa-shipping-fast me-2"></i>Delivery Fee
                                </h6>
                                <p class="mb-0 text-success fw-bold">Free Delivery</p>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="info-item">
                                <h6 class="text-muted mb-1">
                                    <i class="fas fa-phone me-2"></i>Contact
                                </h6>
                                <p class="mb-0">+1 (555) 123-4567</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Restaurant Features -->
            <div class="card shadow-sm border-0 mt-4">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-utensils me-2"></i>Restaurant Features
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="feature-item d-flex align-items-center">
                                <div class="feature-icon me-3">
                                    <i class="fas fa-leaf text-success fs-4"></i>
                                </div>
                                <div>
                                    <h6 class="mb-0">Organic Ingredients</h6>
                                    <small class="text-muted">Fresh and natural</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="feature-item d-flex align-items-center">
                                <div class="feature-icon me-3">
                                    <i class="fas fa-shield-alt text-primary fs-4"></i>
                                </div>
                                <div>
                                    <h6 class="mb-0">Safe Delivery</h6>
                                    <small class="text-muted">Contactless delivery</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="feature-item d-flex align-items-center">
                                <div class="feature-icon me-3">
                                    <i class="fas fa-fire text-danger fs-4"></i>
                                </div>
                                <div>
                                    <h6 class="mb-0">Hot & Fresh</h6>
                                    <small class="text-muted">Delivered hot</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="feature-item d-flex align-items-center">
                                <div class="feature-icon me-3">
                                    <i class="fas fa-award text-warning fs-4"></i>
                                </div>
                                <div>
                                    <h6 class="mb-0">Award Winning</h6>
                                    <small class="text-muted">Top rated restaurant</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Quick Actions -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">
                        <i class="fas fa-bolt me-2"></i>Quick Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-controller="MenuItems" asp-action="Index" class="btn btn-primary btn-lg">
                            <i class="fas fa-list me-2"></i>View Menu
                        </a>
                        <button type="button" class="btn btn-success btn-lg" onclick="orderNow()">
                            <i class="fas fa-shopping-cart me-2"></i>Order Now
                        </button>
                        <a href="tel:+15551234567" class="btn btn-outline-primary">
                            <i class="fas fa-phone me-2"></i>Call Restaurant
                        </a>
                    </div>
                </div>
            </div>

            <!-- Operating Hours -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-clock me-2"></i>Operating Hours
                    </h5>
                </div>
                <div class="card-body">
                    <div class="hours-list">
                        <div class="d-flex justify-content-between border-bottom py-2">
                            <span>Monday</span>
                            <span class="text-success fw-bold">9:00 AM - 11:00 PM</span>
                        </div>
                        <div class="d-flex justify-content-between border-bottom py-2">
                            <span>Tuesday</span>
                            <span class="text-success fw-bold">9:00 AM - 11:00 PM</span>
                        </div>
                        <div class="d-flex justify-content-between border-bottom py-2">
                            <span>Wednesday</span>
                            <span class="text-success fw-bold">9:00 AM - 11:00 PM</span>
                        </div>
                        <div class="d-flex justify-content-between border-bottom py-2">
                            <span>Thursday</span>
                            <span class="text-success fw-bold">9:00 AM - 11:00 PM</span>
                        </div>
                        <div class="d-flex justify-content-between border-bottom py-2">
                            <span>Friday</span>
                            <span class="text-success fw-bold">9:00 AM - 12:00 AM</span>
                        </div>
                        <div class="d-flex justify-content-between border-bottom py-2">
                            <span>Saturday</span>
                            <span class="text-success fw-bold">10:00 AM - 12:00 AM</span>
                        </div>
                        <div class="d-flex justify-content-between py-2">
                            <span>Sunday</span>
                            <span class="text-success fw-bold">10:00 AM - 10:00 PM</span>
                        </div>
                    </div>
                    <div class="mt-3 p-2 bg-success bg-opacity-10 rounded">
                        <small class="text-success fw-bold">
                            <i class="fas fa-check-circle me-1"></i>Open Now
                        </small>
                    </div>
                </div>
            </div>

            <!-- Location Map -->
            <div class="card shadow-sm border-0">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-map me-2"></i>Location
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div style="height: 200px; background: linear-gradient(45deg, #e9ecef, #dee2e6); display: flex; align-items: center; justify-content: center;">
                        <div class="text-center">
                            <i class="fas fa-map-marker-alt text-primary fs-1 mb-2"></i>
                            <p class="mb-0 text-muted">Interactive Map</p>
                            <small class="text-muted">@Model?.Address</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <div class="btn-group" role="group">
                        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">
                            <i class="fas fa-edit me-2"></i>Edit Restaurant
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Back to Restaurants
                        </a>
                        <a asp-controller="MenuItems" asp-action="Create" class="btn btn-success">
                            <i class="fas fa-plus me-2"></i>Add Menu Item
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function orderNow() {
            // Redirect to menu items or show order modal
            window.location.href = '@Url.Action("Index", "MenuItems")';
        }

        // Add some interactive features
        document.addEventListener('DOMContentLoaded', function() {
            // Animate feature items on hover
            const featureItems = document.querySelectorAll('.feature-item');
            featureItems.forEach(item => {
                item.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateX(10px)';
                    this.style.transition = 'transform 0.3s ease';
                });
                item.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateX(0)';
                });
            });
        });
    </script>
}
