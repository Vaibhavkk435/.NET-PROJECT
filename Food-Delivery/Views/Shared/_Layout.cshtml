<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FoodieExpress</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Food_Delivery.styles.css" asp-append-version="true" />
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold fs-3 me-4" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-utensils text-warning me-2"></i>FoodieExpress
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link fw-medium" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-2"></i>Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-medium" asp-area="" asp-controller="Restaurants" asp-action="Index">
                                <i class="fas fa-store me-2"></i>Restaurants
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-medium" asp-area="" asp-controller="MenuItems" asp-action="Index">
                                <i class="fas fa-hamburger me-2"></i>Menu Items
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-medium" asp-area="" asp-controller="Data" asp-action="Index">
                                <i class="fas fa-database me-2"></i>View Data
                            </a>
                        </li>
                    </ul>
                    <div class="d-flex align-items-center">
                        <button class="btn btn-outline-warning fw-medium" onclick="showCart()">
                            <i class="fas fa-shopping-cart me-2"></i>Cart 
                            <span class="badge bg-warning text-dark ms-1" id="cart-count">0</span>
                        </button>
                    </div>
                </div>
            </div>
        </nav>
        <!-- Add padding to body to compensate for fixed navbar -->
        <div style="padding-top: 80px;"></div>
    </header>
    <div class="container-fluid px-0">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!-- Cart Modal -->
    <div class="modal fade" id="cartModal" tabindex="-1" aria-labelledby="cartModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title" id="cartModalLabel">
                        <i class="fas fa-shopping-cart me-2"></i>Your Cart
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="cart-items">
                    <p class="text-center text-muted">Your cart is empty</p>
                </div>
                <div class="modal-footer">
                    <div class="w-100 d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Total: $<span id="cart-total">0.00</span></h5>
                        <button type="button" class="btn btn-success btn-lg" onclick="checkout()">
                            <i class="fas fa-credit-card me-2"></i>Checkout
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer class="bg-dark text-light py-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5><i class="fas fa-utensils text-warning me-2"></i>FoodieExpress</h5>
                    <p class="mb-0">Delicious food delivered fast to your doorstep</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="mb-0">&copy; 2025 - FoodieExpress - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-warning">Privacy</a></p>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
